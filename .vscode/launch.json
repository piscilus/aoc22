    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc.exe - Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\debug\\program.exe",
            "args": ["data_example.txt"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\tools\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: make build"
        }
    ]
}